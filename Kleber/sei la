def novo_artista(artistas):
    artistas.append
    print(artistas)

def sub_artista(antigo, novo):
    indice = artistas.index(antigo)
    artistas[indice] = novo
    print(artistas)

def lista_atual():
    print(artistas)

def sair():
    exit

